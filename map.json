{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "projection": {"type": "mercator"},
    "layer": [
        {
            "data": {
                "url": "australia.json",
                "format": {"type": "topojson", "feature": "australia.topojson"}
            },
            "mark": {"type": "geoshape", "fill": "#e0f7fa", "stroke": "white"}
        },
        {
            "data": {
                "url": "marine_turtle_events.geojson"
            },
            "mark": {"type": "circle", "opacity": 0.7, "stroke": "black"},
      "encoding": {
        "longitude": {"field": "geometry.coordinates[0]", "type": "quantitative"},
        "latitude": {"field": "geometry.coordinates[1]", "type": "quantitative"},
        "color": {"field": "properties.Species", "type": "nominal", "title": "Turtle Species"},
        "tooltip": [
          {"field": "properties.Beach", "type": "nominal"},
          {"field": "properties.Species", "type": "nominal"},
          {"field": "properties.Activity", "type": "nominal"},
          {"field": "properties.Date Event Found", "type": "temporal"}
        ]
      }
    }
  ]
}