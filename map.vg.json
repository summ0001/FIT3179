{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Sea Turtle Tracking in Australia",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
    "data": {
        "url": "australia.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
    },
    {
      "data": {
        "url": "turtles-exploring-data-tracking-turtle-movements_montebellos-green-turtle.csv",
        "format": {"type": "csv"}
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {"value": 50},
        "color": {"value": "green"}
      }
    },
    {
      "data": {
        "url": "turtles-exploring-data-tracking-turtle-movements_cape-domett.csv",
        "format": {"type": "csv"}
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {"value": 50},
        "color": {"value": "red"}
      }
    },
    {
      "data": {
        "url": "turtles-exploring-data-tracking-turtle-movements_ningaloo-loggerhead.csv",
        "format": {"type": "csv"}
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {"value": 50},
        "color": {"value": "orange"}
      }
    },
    {
      "data": {
        "url": "turtles-exploring-data-tracking-turtle-movements_rosemary-island-hawksbill.csv",
        "format": {"type": "csv"}
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {"value": 50},
        "color": {"value": "yellow"}
      }
    }
  ]
}