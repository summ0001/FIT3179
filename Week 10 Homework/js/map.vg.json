{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "background": "#aadaff",
  "projection": {
    "type": "mercator",
    "center": [133, -27],
    "scale": 800
  },
  "params": [
    {
      "name": "speciesFilter",
      "value": "All",
      "bind": {
        "input": "select",
        "name": "Select Species: ",
        "options": ["All", "Green", "Loggerhead", "Hawksbill", "Flatback"],
        "labels": ["All Species", "Green Turtle", "Loggerhead Turtle", "Hawksbill Turtle", "Flatback Turtle"]
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "data/australia.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
    },
    {
      "data": {"url": "data/turtles.csv"},
      "transform": [
        {"filter": "speciesFilter == 'All' || datum.species == speciesFilter"}
      ],
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {"value": 50},
        "color": {
          "field": "species",
          "type": "nominal",
          "scale": {
            "domain": ["Green", "Loggerhead", "Hawksbill", "Flatback"],
            "range": ["green", "red", "orange", "yellow"]
          },
          "title": "Species"
        },
        "tooltip": [
          {"field": "species", "type": "nominal", "title": "Species"},
          {"field": "Speed (kph)", "type": "quantitative", "title": "Speed (kph)"},
          {"field": "Depth (m)", "type": "quantitative", "title": "Depth (m)"}
        ]
      }
    }
  ]
}